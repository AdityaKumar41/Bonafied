<!DOCTYPE html>
<html>
  <head>
    <title>Set Data</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@^2.0/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <script>
      // Function to add a new student block
      function addStudentBlock() {
        const container = document.getElementById("student-blocks");
        const index = container.children.length;

        const newBlock = document.createElement("div");
        newBlock.className =
          "student-block flex flex-wrap gap-4 mb-4 p-4 border border-gray-300 rounded-md";

        newBlock.innerHTML = `
        <div class="flex-1 min-w-[200px]">
          <label for="students-${index}-id" class="block text-sm font-medium text-gray-700">ID:</label>
          <input
            type="number"
            id="students-${index}-id"
            name="students[${index}][id]"
            required
            class="mt-1 p-2 border border-gray-300 rounded-md w-full"
          />
        </div>
        <div class="flex-1 min-w-[200px]">
          <label for="students-${index}-name" class="block text-sm font-medium text-gray-700">Name:</label>
          <input
            type="text"
            id="students-${index}-name"
            name="students[${index}][name]"
            required
            class="mt-1 p-2 border border-gray-300 rounded-md w-full"
          />
        </div>
        <div class="flex-1 min-w-[200px]">
          <label for="students-${index}-university" class="block text-sm font-medium text-gray-700">University:</label>
          <input
            type="text"
            id="students-${index}-university"
            name="students[${index}][university]"
            required
            class="mt-1 p-2 border border-gray-300 rounded-md w-full"
          />
        </div>
        <div class="flex-1 min-w-[200px]">
          <label for="students-${index}-passyear" class="block text-sm font-medium text-gray-700">Pass Year:</label>
          <input
            type="number"
            id="students-${index}-passyear"
            name="students[${index}][passyear]"
            required
            class="mt-1 p-2 border border-gray-300 rounded-md w-full"
          />
        </div>
        <div class="flex-1 min-w-[200px]">
          <label for="students-${index}-aadharNumber" class="block text-sm font-medium text-gray-700">Aadhar Number:</label>
          <input
            type="text"
            id="students-${index}-aadharNumber"
            name="students[${index}][aadharNumber]"
            required
            class="mt-1 p-2 border border-gray-300 rounded-md w-full"
          />
        </div>
      `;

        container.appendChild(newBlock);
      }

      // Function to remove the last student block
      function removeLastBlock() {
        const container = document.getElementById("student-blocks");
        if (container.children.length > 1) {
          container.removeChild(container.lastChild);
        }
      }
    </script>
  </head>
  <body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-6xl w-full">
      <h1 class="text-2xl font-semibold mb-4">Set Data</h1>
      <form action="/set" method="post">
        <div id="student-blocks">
          <!-- Initial student block -->
          <div
            class="student-block flex flex-wrap gap-4 mb-4 p-4 border border-gray-300 rounded-md"
          >
            <div class="flex-1 min-w-[200px]">
              <label
                for="students-0-id"
                class="block text-sm font-medium text-gray-700"
                >ID:</label
              >
              <input
                type="number"
                id="students-0-id"
                name="students[0][id]"
                required
                class="mt-1 p-2 border border-gray-300 rounded-md w-full"
              />
            </div>
            <div class="flex-1 min-w-[200px]">
              <label
                for="students-0-name"
                class="block text-sm font-medium text-gray-700"
                >Name:</label
              >
              <input
                type="text"
                id="students-0-name"
                name="students[0][name]"
                required
                class="mt-1 p-2 border border-gray-300 rounded-md w-full"
              />
            </div>
            <div class="flex-1 min-w-[200px]">
              <label
                for="students-0-university"
                class="block text-sm font-medium text-gray-700"
                >University:</label
              >
              <input
                type="text"
                id="students-0-university"
                name="students[0][university]"
                required
                class="mt-1 p-2 border border-gray-300 rounded-md w-full"
              />
            </div>
            <div class="flex-1 min-w-[200px]">
              <label
                for="students-0-passyear"
                class="block text-sm font-medium text-gray-700"
                >Pass Year:</label
              >
              <input
                type="number"
                id="students-0-passyear"
                name="students[0][passyear]"
                required
                class="mt-1 p-2 border border-gray-300 rounded-md w-full"
              />
            </div>
            <div class="flex-1 min-w-[200px]">
              <label
                for="students-0-aadharNumber"
                class="block text-sm font-medium text-gray-700"
                >Aadhar Number:</label
              >
              <input
                type="text"
                id="students-0-aadharNumber"
                name="students[0][aadharNumber]"
                required
                class="mt-1 p-2 border border-gray-300 rounded-md w-full"
              />
            </div>
          </div>
        </div>
        <div class="mb-4 flex gap-2">
          <button
            type="button"
            onclick="addStudentBlock()"
            class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600"
          >
            Add Student
          </button>
          <button
            type="button"
            onclick="removeLastBlock()"
            class="bg-red-500 text-white py-2 px-4 rounded-md hover:bg-red-600"
          >
            Remove Last Student
          </button>
        </div>
        <button
          type="submit"
          class="bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600"
        >
          Submit
        </button>
      </form>
    </div>
  </body>
</html>
